<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ToggleButtonStyle">
        <item name="android:textColor">@color/toggle_textcolor</item>
        <item name="android:textSize">26sp</item>
    </style>
    
    <style name="PushButtonStyle">
        <item name="android:textColor">@color/button_textcolor</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TableHeaderStyle">
        <item name="android:background">#CCCCCC</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="TableRowStyle">
        <item name="android:background">#EEEEEE</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>