<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TableRowStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/picking_item_qty"
        style="@style/TableRowStyle"
        android:layout_width="@dimen/picking_table_qty_column_width"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/table_row_height" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/picking_item_name"
        style="@style/TableRowStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="@dimen/table_row_height" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" />

    <EditText
        android:id="@+id/picking_item_to_follow"
        style="@style/TableRowStyle"
        android:layout_width="@dimen/picking_table_to_follow_column_width"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone|flagNoFullscreen"
        android:inputType="numberDecimal"
        android:minHeight="@dimen/table_row_height"
        android:selectAllOnFocus="true" />

</LinearLayout>