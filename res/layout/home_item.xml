<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TableRowStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/home_item_picking_name"
        style="@style/TableRowStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="@dimen/table_row_height" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" />

    <ToggleButton
        android:id="@+id/home_item_stage1"
        style="@style/TableRowStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bool_background"
        android:minHeight="@dimen/table_row_height"
        android:selectAllOnFocus="true"
        android:textOff=""
        android:textOn="" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" />

    <ToggleButton
        android:id="@+id/home_item_stage2"
        style="@style/TableRowStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bool_background"
        android:minHeight="@dimen/table_row_height"
        android:selectAllOnFocus="true"
        android:textOff=""
        android:textOn="" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/home_item_carrier"
        style="@style/TableRowStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:minHeight="@dimen/table_row_height" />

</LinearLayout>